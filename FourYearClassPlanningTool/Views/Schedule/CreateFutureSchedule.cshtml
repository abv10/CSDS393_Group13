        }
    }
    setUpSelect;
</script>

<html>
<table id="tbl">
    <tr>
        <th colspan="2">Fall 2021</th>
    </tr>
    <tr>
        <td>
            <select name="course" id="courses">
              @foreach(Course s in (ICollection<Course>)ViewData["Courses"])
              {
                <option value="@s">@s.Name</option>
              }
            </select>
        </td>
    </tr>
    <tr>
        <td>
            <input type="submit" class="button" value="Add another course" onclick="addField('tbl');" />
        </td>
    </tr>
</table>
</html>